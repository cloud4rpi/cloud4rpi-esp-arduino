{
    "name": "cloud4rpi-esp-arduino",
    "keywords": "arduino, nodemcu, esp8266, esp32, mqtt, iot, cloud",
    "description": "Cloud4RRi client library for ESP8266, ESP32 based boards and Arduino language",
    "repository":
    {
      "type": "git",
      "url": "https://github.com/cloud4rpi/cloud4rpi-esp-arduino.git"
    },
    "authors":
    [
      {
        "name": "Cloud4RPi",
        "email": "team@cloud4rpi.io",
        "url": "https://cloud4rpi.io",
        "maintainer": true
      }
    ],
    "dependencies": {
      "PubSubClient": "^2.7",
      "ArduinoJson": "^5.13.4"
    },
    "build": {
      "flags": "-DMQTT_MAX_PACKET_SIZE=1024 -DMQTT_MAX_TRANSFER_SIZE=128"
    },
    "version": "0.0.7",
    "examples": "examples/*/*.ino",
    "frameworks": "arduino",
    "platforms": [
        "espressif8266",
        "espressif32"
    ]
}
